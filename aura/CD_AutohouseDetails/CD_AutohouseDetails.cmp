<aura:component description="CD_AutohouseDetails" implements="flexipage:availableForAllPageTypes" access="global" controller="CD_AutohouseSearchController">

    <aura:attribute type="Boolean" name="isRendered" default="false" />
    <aura:attribute type="Account" name="autohouse" default="{  'sobjectType': 'Account', 'Name': ''}" />
    <aura:handler event="c:CD_SelectedAutohouseOnList" action="{!c.showAutohouseDetail}"/>

    <aura:if isTrue="{!v.isRendered}">
    <article class="slds-card">
        <div class="slds-card__header slds-grid" >
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__body">
                    <h2>
                        <a href="javascript:void(0);" class="slds-card__header-link slds-truncate"
                           title="[object Object]">
                            <span class="slds-text-heading_small">Autohouse Details</span>
                        </a>
                    </h2>
                </div>
            </header>
        </div>
        <div class="slds-card__body slds-card__body_inner">
            <lightning:recordViewForm recordId="{!v.autohouse.Id}" objectApiName="Account">
                <div class="slds-grid">
                    <div class="slds-col slds-size_1-of-2">
                        <lightning:outputField fieldName="Name" />
                        <lightning:outputField fieldName="Website" />
                    </div>
                    <div class="slds-col slds-size_1-of-2">
                        <lightning:outputField fieldName="Phone"/>
                        <lightning:outputField fieldName="BillingCity"/>
                    </div>
                </div>
            </lightning:recordViewForm>
        </div>
    </article>
    </aura:if>
</aura:component>